<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/player_top_ll"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="top"
        android:background="@color/player_item_bg_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:translationY="-45dp"
        tools:translationY="0dp">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/background_video_action_item"
            android:focusable="true"
            android:nextFocusLeft="@+id/danmu_control_iv"
            android:nextFocusRight="@+id/subtitle_settings_iv"
            android:nextFocusUp="@+id/danmu_control_iv"
            android:nextFocusDown="@+id/player_lock_iv"
            android:padding="10dp"
            android:src="@mipmap/ic_return_back" />

        <com.xyoye.player_component.widgets.MarqueeTextView
            android:id="@+id/video_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:nextFocusLeft="@+id/subtitle_settings_iv"
            android:nextFocusRight="@+id/back_iv"
            android:nextFocusUp="@+id/back_iv"
            android:nextFocusDown="@+id/subtitle_settings_iv"
            android:singleLine="true"
            android:textColor="@color/text_white_immutable"
            android:textSize="16sp"
            tools:text="标题" />

        <com.xyoye.player_component.widgets.BatteryView
            android:id="@+id/battery_view"
            android:layout_width="35dp"
            android:layout_height="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/white"
            android:textSize="8sp"
            app:header_height="10dp"
            app:header_width="2dp"
            app:inner_color="#99ffffff"
            app:inner_margin="1dp"
            app:inner_radius="1dp"
            app:outer_color="@color/white"
            app:outer_radius="2dp"
            app:outer_stroke="1dp"
            tools:ignore="SmallSp"
            tools:progress="100" />

        <TextView
            android:id="@+id/system_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/test_default_system_time"
            android:textColor="@color/text_white_immutable"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/subtitle_settings_iv"
            android:layout_width="@dimen/settings_btn_width"
            android:layout_height="match_parent"
            android:background="@drawable/background_video_action_item"
            android:focusable="true"
            android:nextFocusLeft="@+id/back_iv"
            android:nextFocusRight="@+id/danmu_settings_tv"
            android:nextFocusUp="@+id/back_iv"
            android:nextFocusDown="@+id/player_lock_iv"
            android:padding="12dp"
            android:src="@drawable/ic_subtitle_setting" />

        <TextView
            android:id="@+id/danmu_settings_tv"
            android:layout_width="@dimen/settings_btn_width"
            android:layout_height="match_parent"
            android:background="@drawable/background_video_action_item"
            android:focusable="true"
            android:gravity="center"
            android:nextFocusLeft="@+id/subtitle_settings_iv"
            android:nextFocusRight="@+id/player_settings_iv"
            android:nextFocusUp="@+id/subtitle_settings_iv"
            android:nextFocusDown="@+id/player_lock_iv"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="弹"
            android:textColor="@drawable/ic_danmu_setting"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/player_settings_iv"
            android:layout_width="@dimen/settings_btn_width"
            android:layout_height="match_parent"
            android:background="@drawable/background_video_action_item"
            android:focusable="true"
            android:nextFocusLeft="@+id/danmu_settings_tv"
            android:nextFocusRight="@+id/player_lock_iv"
            android:nextFocusUp="@+id/danmu_settings_tv"
            android:nextFocusDown="@+id/player_lock_iv"
            android:padding="12dp"
            android:src="@drawable/ic_player_setting" />
    </LinearLayout>
</layout>