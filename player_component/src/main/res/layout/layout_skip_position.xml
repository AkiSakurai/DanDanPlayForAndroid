<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/skip_position_ll"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:background="@color/player_item_bg_color"
        app:layoutDescription="@xml/layout_skip_position_scene">

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/skip_cancel_iv"
            android:layout_width="45dp"
            android:layout_height="0dp"
            android:padding="7dp"
            android:src="@drawable/ic_skip_cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/divider"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:background="@color/gray_40"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/position_tips"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/position_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@string/tips_last_play_position"
            android:textColor="@color/text_white_immutable"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/position_tv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/position_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="@color/text_white_immutable"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/divider_end"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="31:51" />

        <View
            android:id="@+id/divider_end"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/gray_40"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/skip_confirm_tv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/skip_confirm_tv"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/action_skip_position"
            android:textColor="@color/text_theme"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/barrier"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>